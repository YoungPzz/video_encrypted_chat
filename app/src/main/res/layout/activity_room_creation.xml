<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="房间创建"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- 用户信息卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户信息"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/et_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入用户ID"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginBottom="10dp"
                android:padding="12dp"
                android:background="@drawable/edittext_bg" />

            <EditText
                android:id="@+id/et_room_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入房间号"
                android:inputType="text"
                android:maxLines="1"
                android:padding="12dp"
                android:background="@drawable/edittext_bg" />
        </LinearLayout>

        <!-- 创建房间按钮 -->
        <Button
            android:id="@+id/btn_create_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="创建房间"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"
            android:paddingVertical="12dp" />

        <!-- SM4密钥展示区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SM4密钥"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:layout_marginBottom="8dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/tv_sm4_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="static_sm4_key_value_placeholder"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:background="#F8F9FA"
                    android:padding="10dp" />
            </ScrollView>
        </LinearLayout>

        <!-- 本地分片展示区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本地分片"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginBottom="8dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/tv_local_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="static_local_share_value_placeholder"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:background="#F1F8E9"
                    android:padding="10dp" />
            </ScrollView>
        </LinearLayout>

        <!-- 他人分片展示区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="他人分片"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF9800"
                android:layout_marginBottom="8dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <LinearLayout
                    android:id="@+id/ll_remote_shares_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>
        </LinearLayout>

        <!-- 恢复密钥按钮 -->
        <Button
            android:id="@+id/btn_recover_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="恢复密钥"
            android:backgroundTint="#9C27B0"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"
            android:paddingVertical="12dp" />

        <!-- 密钥恢复结果 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="密钥恢复结果"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#9C27B0"
                android:layout_marginBottom="8dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/tv_recovered_key_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="功能待实现"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:background="#F3E5F5"
                    android:padding="10dp" />
            </ScrollView>
        </LinearLayout>

        <!-- 进入房间按钮 -->
        <Button
            android:id="@+id/btn_enter_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入视频房间"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:paddingVertical="14dp" />

    </LinearLayout>

</ScrollView>
